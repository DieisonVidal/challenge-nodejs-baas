{
    "openapi": "3.0.0",
    "info": {
        "title": "API challenge-baas",
        "description": "This API aims to meet the proposed Baas rules",
        "termsOfService": "http://localhost:3000/terms",
        "contact": {
            "email": "dieison.silva@liveonsolutions.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/",
            "description": "API test"
        }
    ], 
    "paths": {
        "/admin/create": {
            "post": {
                "summary": "Admin registration",
                "description": "This route is responsible for registering an administrator",
                "tags": ["Admin"],
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/Admin"
                            },
                            "examples": {
                                "admin": {
                                    "value": {
                                        "name": "Jo√£o Vitor Test",
                                        "email": "joaovitor@test.com",
                                        "password": "joaotest123",
                                        "role": "admin"
                                    }
                                }
                            }
                        }     
                    }
                },
                "responses": {
                    "400": {
                        "description": "Admin already exists."
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref":"#/components/schemas/Admin"
                                }
                            }
                        }
                    } 
                }
            }
        },
        "/admin/auth": {
            "post":{
                "summary": "Admin authentication",
                "description": "This route is responsible for admin authentication",
                "tags": ["Admin"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref":"#/components/schemas/adminLogin"
                            },
                            "examples": {
                                "Auth": {
                                    "value": {
                                        "email": "joaovitor@test.com",
                                        "password": "joaotest123"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Admin": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "id": {
                        "type":"string"
                    } 
                }
            }, 
            "adminLogin": {
                "type":"object",
                "properties": {
                    "email": {
                        "type":"string"
                     },
                     "password": {
                         "type":"string"
                     }
                }
            }
        }
    }
}